<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="JrTools.Pages.Apps.Cria"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JrTools.Pages.Apps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Cartão padrão -->
        <Style x:Key="FancyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="12" />
        </Style>

        <!-- Botão secundário -->
        <Style x:Key="FancySecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="10,6" />
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel Spacing="20">

                <!-- Card principal -->
                <Border Style="{StaticResource FancyCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Border Width="72" Height="72" CornerRadius="12"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Image Source="https://i0.wp.com/www.parentgalactique.fr/wp-content/uploads/2015/02/CHAPPIE-Affiche-USA.jpg"
                                   Stretch="UniformToFill"
                                   Margin="4"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="18,0,0,0">
                            <TextBlock Text="Cria" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="Cria falando mal do seu código"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="20"
                                    VerticalAlignment="Center">
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Card de Controle -->
                <Border Style="{StaticResource FancyCardStyle}">
                    <StackPanel Spacing="16">
                        <!-- ScrollViewer controlado via código -->
                        <ScrollViewer x:Name="LogsScrollViewer"
                                      Height="350"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogsTextBox"
                                     IsReadOnly="True"
                                     TextWrapping="NoWrap"
                                     AcceptsReturn="True"
                                     FontFamily="Consolas"
                                     FontSize="13"
                                     Text="Aguardando início..."
                                     BorderThickness="1"
                                     BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                     CornerRadius="8"
                                     Padding="6"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
