<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="JrTools.Pages.LancarHoras"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JrTools.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:JrTools.Dto"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- === ESTILO DE CARTÃO === -->
        <Style x:Key="FancyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="20" >
        <StackPanel>

            <!-- ====== CARD DO FORMULÁRIO ====== -->
            <Border Style="{StaticResource FancyCardStyle}">
                <StackPanel Spacing="12">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <!-- Texto à esquerda -->
                            <ColumnDefinition Width="Auto" />
                            <!-- DatePicker à direita -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Lançamento de Horas" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Grid.Column="0"/>

                        <DatePicker Grid.Column="1"  VerticalAlignment="Center" x:Name="DiaLancamento" SelectedDateChanged="DiaLancamento_Changed"/>
                    </Grid>


                    <InfoBar x:Name="ValidationInfoBar" IsOpen="False" Severity="Error" Margin="0,0,0,8"/>

                    <!-- Horários e Total -->
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                        <StackPanel>
                            <TextBlock Text="Hora de Início" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TimePicker x:Name="HoraInicioPicker" ClockIdentifier="24HourClock" TimeChanged="HoraPicker_TimeChanged" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Hora de Fim" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TimePicker x:Name="HoraFimPicker" ClockIdentifier="24HourClock" TimeChanged="HoraPicker_TimeChanged" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total (h)" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <NumberBox x:Name="TotalHorasBox"
                                       Minimum="0"
                                       Maximum="24"
                                       PlaceholderText="0"
                                       SpinButtonPlacementMode="Compact"
                                       HorizontalAlignment="Stretch"
                                       ToolTipService.ToolTip="Se preencher Início e Fim, o total será calculado automaticamente" />
                        </StackPanel>
                    </Grid>

                    <!-- Descrição -->
                    <StackPanel>
                        <TextBlock Text="Descrição" Style="{StaticResource BodyStrongTextBlockStyle}" />
                        <TextBox x:Name="DescricaoBox" 
                                 AcceptsReturn="True"
                                 PlaceholderText="Descreva o trabalho realizado..."
                                 TextWrapping="Wrap"
                                 Height="80"/>
                    </StackPanel>

                    <!-- Projeto + Botão Adicionar -->
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <StackPanel>
                            <TextBlock Text="Projeto" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <ComboBox x:Name="ProjetoComboBox" 
                                      PlaceholderText="Selecione um projeto..."
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <Button x:Name="AddProjectButton"
                                Grid.Column="1"
                                VerticalAlignment="Bottom"
                                Content="+" 
                                Width="40" Height="40"
                                Style="{StaticResource AccentButtonStyle}"
                                ToolTipService.ToolTip="Adicionar novo projeto"
                                Click="AddProjectButton_Click"/>
                    </Grid>

                    <!-- Botão de salvar -->
                    <Button Content="Salvar Lançamento" 
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0"
                            Style="{StaticResource AccentButtonStyle}" Click="SalvarLancamentoButton_Click" />
                </StackPanel>
            </Border>

            <!-- ====== CARD DA LISTA DE LANÇAMENTOS ====== -->
            <Border Style="{StaticResource FancyCardStyle}">
                <StackPanel>
                    <TextBlock Text="Últimos Lançamentos" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- Cabeçalho de colunas -->
                    <Grid Padding="8" ColumnDefinitions="Auto,Auto,Auto,Auto,*,Auto" ColumnSpacing="16">
                        <TextBlock Text="Início" FontWeight="SemiBold" Grid.Column="0" Width="80"/>
                        <TextBlock Text="Fim" FontWeight="SemiBold" Grid.Column="1" Width="80"/>
                        <TextBlock Text="Total (h)" FontWeight="SemiBold" Grid.Column="2" Width="60"/>
                        <TextBlock Text="Descrição" FontWeight="SemiBold" Grid.Column="3" />
                    </Grid>

                    <!-- Lista -->
                    <ListView x:Name="LancamentosListView"
                              IsItemClickEnabled="False"
                              SelectionMode="None"
                              CornerRadius="8"
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              BorderThickness="1">

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local1:HoraLancamento">
                                <Grid Padding="8" ColumnDefinitions="Auto,Auto,Auto,Auto,*,Auto" ColumnSpacing="16">
                                    <TextBlock Text="{x:Bind HoraInicio, Mode=OneWay}" Grid.Column="1" Width="80" />
                                    <TextBlock Text="{x:Bind HoraFim, Mode=OneWay}" Grid.Column="2" Width="80"/>
                                    <TextBlock Text="{x:Bind TotalHoras, Mode=OneWay}" Grid.Column="3" Width="60"/>
                                    <TextBlock Text="{x:Bind Descricao, Mode=OneWay}" Grid.Column="4" TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
