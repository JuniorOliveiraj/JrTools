<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="JrTools.Pages.RhProdPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JrTools.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- Estilo para os cards que se ajustam em grade -->
        <Style x:Key="ResponsiveCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="320"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>

        <!-- Novo estilo para o card de terminal, que ocupa a largura total -->
        <Style x:Key="FullWidthCardStyle" TargetType="Border" BasedOn="{StaticResource ResponsiveCardStyle}">
            <Setter Property="MaxWidth" Value="9999"/>
            <!-- Remove a limitação de largura máxima -->
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel Spacing="16">

                <!-- Contêiner para título e botões -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Título -->
                    <TextBlock Text="Subir ambiente Prod" 
                               Style="{ThemeResource TitleTextBlockStyle}" 
                               VerticalAlignment="Center"
                               Grid.Column="0"/>

                    <!-- Botões e ProgressRing -->
                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" Grid.Column="1">
                        <Button x:Name="ProcessarButton2" 
                                Content="PROCESSAR"
                                Style="{ThemeResource AccentButtonStyle}"
                                Click="ProcessarButton_Click"/>
                        <ProgressRing x:Name="LoadingRing"
                                      IsActive="False"
                                      Width="24"
                                      Height="24"
                                      VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- ComboBox e texto -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock x:Name="BreachSelecionada"  
                               Text="breach" 
                               VerticalAlignment="Center" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    <ComboBox x:Name="ProjetoComboBox" MinWidth="200" SelectionChanged="ProjetoComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- Barra para exibir mensagens de erro/validação -->
                <InfoBar x:Name="ValidationInfoBar" IsOpen="False" Severity="Error" Margin="0,0,8,0"/>

                <!-- CONTAINER DOS DOIS CARDS LADO A LADO -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- CARD 1 -->
                    <Border Style="{StaticResource ResponsiveCardStyle}" Grid.Column="0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Opções de Compilação" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch x:Name="BaixarBinarioToggle" Header="Baixar binário atualizado" IsOn="True"/>
                            <ToggleSwitch x:Name="CompilarEspecificosToggle" Header="Compilar Produto" IsOn="True"/>
                            <ToggleSwitch x:Name="GitPull" Header="Atualizar breach" IsOn="False"/>
                            <TextBox x:Name="breachEspesifica" Header="Breach" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- CARD 2 -->
                    <Border Style="{StaticResource ResponsiveCardStyle}" Grid.Column="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="fechar processos" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch x:Name="PrviderFechado" Header="Manter Providers fechados" IsOn="True"/>
                            <ToggleSwitch x:Name="BuilderFechado" Header="Manter Builder fechados" IsOn="True"/>
                            <ToggleSwitch x:Name="RunnerFechado" Header="Manter Runner fechados" IsOn="True"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- CARD 3: Terminal de Processamento -->
                <Border Style="{StaticResource FullWidthCardStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Terminal de Processamento" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <Border Background="Black" CornerRadius="4" Padding="8">
                            <ScrollViewer x:Name="TerminalScrollViewer" Height="200" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="TerminalOutput"
                                           Text="Aguardando execução..." 
                                           FontFamily="Consolas" 
                                           Foreground="White" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Top"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
