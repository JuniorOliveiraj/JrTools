<Page
    x:Class="JrTools.Pages.Documentador"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JrTools.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Card moderno -->
        <Style x:Key="FancyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
        </Style>

        <!-- BotÃ£o secundÃ¡rio elegante -->
        <Style x:Key="FancySecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
    </Page.Resources>

    <!-- Scroll da pÃ¡gina -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="16">
        <StackPanel Spacing="20">
            <InfoBar x:Name="ValidationInfoBar" IsOpen="False" Severity="Error" Margin="0,0,8,0"/>

            <!-- Commit -->
            <Border Style="{StaticResource FancyCardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Commit" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBox x:Name="CommitTextBox" PlaceholderText="Digite a string do commit..." AcceptsReturn="False"/>
                </StackPanel>
            </Border>

            <!-- Comando -->
            <Border Style="{StaticResource FancyCardStyle}">
                <StackPanel Spacing="8">


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Comando" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        
                        <Button x:Name="AttachFileButton"
                            Grid.Column="1"
                            Style="{StaticResource FancySecondaryButtonStyle}"
                            Click="AttachFileButton_Click"
                            VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE8E5;" FontSize="16"/>
                                <TextBlock Text="Anexar"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    
                    
                    <TextBox x:Name="CommandTextBox" PlaceholderText="Digite o comando a ser processado..." AcceptsReturn="True" Height="120" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

      

            <!-- Markdown Output + BotÃµes -->
            <Border Style="{StaticResource FancyCardStyle}">
                <StackPanel Spacing="12">

                    <!-- TÃ­tulo + BotÃµes -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="DocumentaÃ§Ã£o Gerada"
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="18"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                            <Button x:Name="BuildarDotnetButton" Style="{ThemeResource AccentButtonStyle}" Click="ProcessarDotnetButton_Click">
                                <TextBlock Text="Gerar DocumentaÃ§Ã£o"/>
                            </Button>

                            <Button x:Name="ExportPdfButton" Style="{StaticResource FancySecondaryButtonStyle}" Click="ExportPdfButton_Click">
                                <TextBlock Text="ðŸ“„ PDF"/>
                            </Button>

                            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="28" Height="28" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Markdown ScrollÃ¡vel -->
                    <Border MinHeight="200" MaxHeight="600">
                        <ScrollViewer x:Name="MarkdownScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <controls:MarkdownTextBlock x:Name="TerminalOutput"
                                                        Text="Aguardando execuÃ§Ã£o..."
                                                        TextWrapping="Wrap"
                                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                        Padding="12"/>
                        </ScrollViewer>
                    </Border>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
