<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="JrTools.Pages.Copy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JrTools.Pages"
    xmlns:dto="using:JrTools.Dto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Cartão padrão -->
        <Style x:Key="FancyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="12" />
        </Style>

        <!-- Botão secundário -->
        <Style x:Key="FancySecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="10,6" />
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel Spacing="20">

                <!-- Cabeçalho -->
                <TextBlock Text="Espelhador de Pastas"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <!-- Card de Perfis -->
                <Border Style="{StaticResource FancyCardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Perfis de Espelhamento"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <Button x:Name="AdicionarPerfilButton" Style="{ThemeResource AccentButtonStyle}" Click="AdicionarPerfilButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE710;" />
                                        <TextBlock Text="Adicionar Perfil" />
                                    </StackPanel>
                                </Button>

                                <Button x:Name="RemoverPerfilButton" Style="{StaticResource FancySecondaryButtonStyle}" Click="RemoverPerfilButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE74D;" />
                                        <TextBlock Text="Remover Selecionado" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Campo de pesquisa -->
                        <TextBox x:Name="PesquisaInput"
                                 PlaceholderText="Pesquisar perfil..."
                                 Margin="0,6,0,0"
                                 Width="300"
                                 HorizontalAlignment="Left"/>

                        <!-- Lista de Perfis com scroll -->
                        <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                MinHeight="150"
                                MaxHeight="300">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListView x:Name="PerfisListView"
                                          ItemsSource="{x:Bind ViewModel.Perfis}"
                                          SelectedItem="{x:Bind ViewModel.SelectedPerfil, Mode=TwoWay}"
                                          SelectionMode="Single">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="dto:PerfilEspelhamento">
                                            <Border Margin="4" Padding="8" CornerRadius="6"
                                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Nome}" FontWeight="Bold" FontSize="16" />
                                                    <TextBlock Text="{Binding DiretorioOrigem}" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding DiretorioDestino}" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>
                        </Border>

                        <!-- Placeholder manual (Poderia usar converter de visibilidade, mas code-behind lida por enquanto) -->
                        <TextBlock x:Name="EmptyPlaceholder"
                                   Text="Nenhum perfil cadastrado ainda."
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Visibility="Collapsed"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card de Controle -->
                <Border Style="{StaticResource FancyCardStyle}">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Controle de Espelhamento"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                            <Button x:Name="IniciarButton"
                                Grid.Column="1"
                                Style="{ThemeResource AccentButtonStyle}"
                                Width="180"
                                HorizontalAlignment="Right"
                                Command="{x:Bind ViewModel.ToggleMirroringCommand}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" />
                                    <TextBlock Text="Iniciar Espelhamento" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Barra de Progresso -->
                        <StackPanel x:Name="ProgressPanel" Spacing="8" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="ProgressStatusText" 
                                           Text="{x:Bind ViewModel.StatusText, Mode=OneWay}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <TextBlock x:Name="ProgressPercentText"
                                           Grid.Column="1"
                                           Text="{x:Bind ViewModel.ProgressValue, Mode=OneWay}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="{ThemeResource SystemAccentColor}"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <ProgressBar x:Name="SyncProgressBar"
                                         Value="{x:Bind ViewModel.ProgressValue, Mode=OneWay}"
                                         Maximum="100"
                                         Height="8"
                                         CornerRadius="4"
                                         ShowError="False"
                                         ShowPaused="False"/>

                            <TextBlock x:Name="ProgressDetailsText"
                                       Text="{x:Bind ViewModel.StatusText, Mode=OneWay}"
                                       FontSize="12"
                                       Foreground="Gray"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <TextBlock Text="Logs de Atividade:" FontWeight="SemiBold"/>
                        <ScrollViewer Height="220">
                            <TextBox x:Name="LogsTextBox"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Text="{x:Bind ViewModel.Logs, Mode=OneWay}"
                                     BorderThickness="1"
                                     BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                     CornerRadius="8"
                                     Padding="6"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Modal para adicionar perfil -->
        <ContentDialog x:Name="NovoPerfilDialog"
                       Title="Novo Perfil de Espelhamento"
                       PrimaryButtonText="Salvar"
                       SecondaryButtonText="Cancelar"
                       DefaultButton="Primary"
                       Width="450">
            <StackPanel Spacing="10">
                <TextBox x:Name="NomePerfilInput" Header="Nome do Perfil" PlaceholderText="Ex: Backup Projetos"/>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBox x:Name="OrigemInput" Header="Diretório de Origem" Width="330" PlaceholderText="Ex: C:\Projetos"/>
                    <Button x:Name="SelecionarOrigemButton" Content="..." Width="40"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBox x:Name="DestinoInput" Header="Diretório de Destino" Width="330" PlaceholderText="Ex: D:\Backup"/>
                    <Button x:Name="SelecionarDestinoButton" Content="..." Width="40"/>
                </StackPanel>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>
